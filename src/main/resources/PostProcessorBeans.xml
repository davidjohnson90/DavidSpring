<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="postProcessorBean" class="com.david.spring.helloDavid.HelloDavid" init-method="init" destroy-method="destroy">
        <property name="message" value="Hello David"></property>
    </bean>

    <bean class="com.david.spring.beans.postProcessors.InitHelloDavid"/>
</beans>