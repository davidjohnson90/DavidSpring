<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="helloDavid" class="com.david.spring.eventHandling.HelloDavid">
        <property name="message" value="Hello David!"></property>
    </bean>

    <bean id="cStartEventHandler" class="com.david.spring.eventHandling.CStartEventHandler"/>
    <bean id="cStopEventHandler" class="com.david.spring.eventHandling.CStopEventHandler"/>
</beans>